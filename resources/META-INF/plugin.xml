<idea-plugin>
  <id>org.cacticouncil.amphibian</id>
  <name>Amphibian Editor</name>
  <version>1.0</version>
  <vendor email="support@cacticouncil.org" url="https://github.com/cacticouncil/amphibian">Cacti Council</vendor>

  <description><![CDATA[
      Dual-modality editor for source code in standard languages
    ]]></description>

  <change-notes><![CDATA[
      v1.0-rc - Release candidate for v1.0 release
    ]]>
  </change-notes>

  <idea-version since-build="202.0"/>
  <depends>com.intellij.modules.lang</depends>

    <application-components>
        <component>
            <implementation-class>org.cacticouncil.amphibian.AmphibianComponent</implementation-class>
        </component>
    </application-components>

  <extensions defaultExtensionNs="com.intellij">
    <fileEditorProvider implementation="org.cacticouncil.amphibian.AmphibianEditorProvider"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>
</idea-plugin>